		<script>
            function val_numero(e) {
				tecla = (document.all) ? e.keyCode : e.which;
				if (tecla==8 || tecla==99 || tecla==118 || tecla==0) return true;
				patron =/[0-9-]+$/;            
				te = String.fromCharCode(tecla);
				return patron.test(te);
			}
        </script>
